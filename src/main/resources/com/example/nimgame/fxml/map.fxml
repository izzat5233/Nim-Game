<AnchorPane fx:id="mapRoot" prefHeight="661.0" prefWidth="622.0" style="-fx-background-color: #333;" stylesheets="@../styles/globals.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nimgame.fxml.MapController">
    <children>
      <ImageView fitHeight="811.0" fitWidth="852.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/backgrounds/table_background.png" />
         </image>
      </ImageView>
         <VBox fx:id="pilesContainer" alignment="CENTER" fillWidth="false" layoutX="264.0" layoutY="217.0" prefHeight="308.0" prefWidth="322.0" />
      <AnchorPane layoutX="17.0" layoutY="200.0" prefHeight="236.0" prefWidth="139.0">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0000001b" height="236.0" layoutX="-8.0" stroke="BLACK" strokeType="INSIDE" width="139.0" />
            <RadioButton fx:id="radioButtonPerfect" layoutX="7.0" layoutY="189.0" mnemonicParsing="false" text="Perfect" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="difficultyRadioGroup" />
               </toggleGroup>
            </RadioButton>
            <Label prefHeight="46.0" prefWidth="122.0" text="Difficulty:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
            <RadioButton fx:id="radioButtonEasy" layoutX="7.0" layoutY="57.0" mnemonicParsing="false" selected="true" text="Easy" textFill="WHITE" toggleGroup="$difficultyRadioGroup">
